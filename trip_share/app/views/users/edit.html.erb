<div class="site-contents">
  <div class="account-container contents-width">
    <h2 class="account-text">アカウント</h2>
      <div class="account-info">
       <%= form_for @user do |f| %>
        <table>
        <tr class="account-name">
          <th><%= f.label :name, "名前"%></th>
          <td><%= f.text_field :name %></td>
        </tr>
        <tr class="account-email">
          <th><%= f.label :email, "メールアドレス"%></th>
          <td><%= f.text_field :email %></td>
        </tr>
        <tr class="account-password">
        <th><%= f.label :password,"パスワード" %></th>
        <td><%= f.text.field :password %></td>
        </tr>
        </table>
         <%= f.submit "変更" %>
      <% end %>
      </div>
  </div>
</div>
