<div class="site-contents">
    <div class="login-container contents-width">
        <h3 class="login-text">新規登録</h3>
        <div class="login-forms">
            <%= form_tag("/users/create") do %>
            <input class="login-form" name="name" placeholder="名前" value="<%= @user.name %>">
            <input class="login-form" name="email" placeholder="メールアドレス"value="<%= @user.email %>">
            <input class="login-form" type="password" name="password" placeholder="パスワード">
            <!--<input class="login-form" type="password" name="repassword" placeholder="パスワード確認">-->
            <input class="login-btn" type="submit" value="登録">
            <%= link_to "ログインはこちら","/login" %>
            <%end%>
        </div>
    </div>
</div>