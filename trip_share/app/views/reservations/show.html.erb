　　<div class="site-contents contents-width">
    <h3 class="room-text">予約ルーム詳細</h3>
    <div class="room-show-wrap">
         <div class="room-show-container">
          <div class="room-show-img">
              <img src="<%= "/rooms_img/#{@reservation.room.room_image}" %>">
          </div>
          
          <div class="room-box">
             <p class="room-name"><%= @reservation.room.room_name %></p>
             <p class="room-adress"><%= @reservation.room.adress %></p>
             <p class="room-introduction"><%= @reservation.room.introduction %></p>
          </div>
        </div>
         <div class="reservation-box">
           <div class="reservation">
           <table>
             <tr class="account-name">
               <th>開始日</th>
               <td><%= @reservation.start_date %></td>
             </tr>
             <tr class="account-email">
               <th>終了日</th>
               <td><%= @reservation.end_date %></td>
             </tr></td>
             </tr>
             <tr class="account-password">
             <th>人数</th>
             <td><%= @reservation.group %></td>
             </tr>
             <tr class="account-image">
             <th>合計金額</th>
             <td><%= @reservation.total_price %></td>
             </tr>
              <tr class="account-introduction">
             <th>予約日</th>
             <td><%= @reservation.created_at %></td>
             </tr>
            </table>
         
    </div>
    </div>
     <div class="room-link">
      <% if @current_user.id == @reservation.user_id %>
            <%= link_to "ルーム予約を変更する","/reservations/#{@reservation.id}/update" %>
            <%= link_to "予約部屋一覧","/reservations" %>
       <%end%>
     </div>
    </div>
    </div>